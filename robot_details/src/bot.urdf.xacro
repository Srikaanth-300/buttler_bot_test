<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name ="buttler_bot">
    
    <xacro:include filename="inertia.xacro"/>
    <!--<link name = "base_link"/>-->
    <!-- BASE_FOOTPRINT LINK -->
    <!--<joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>-->

    <link name="base_footprint">
    </link>
    <joint name = "chassis joint" type = "fixed">
        <parent link = "base_footprint"/>
        <child link = "chassis"/>
        <origin xyz = "0 0 0.15"/>
    </joint>
    <!-- Body -->
    <link name = "chassis">
        <visual>
            <origin xyz="0 0 0" rpy = "0 0 0"/>
            <geometry>
                <box size = "0.5 0.5 0.25"/>
            </geometry> 
            <material name = "red">
                <color rgba = "1 0 0 1"/>
            </material>
        </visual> 
        <collision>
            <origin xyz="0 0 0" rpy = "0 0 0"/>
            <geometry>
                <box size = "0.5 0.5 0.25"/>
            </geometry> 
        </collision> 
        <xacro:inertial_box mass="0.7" x="0.5" y="0.5" z="0.25">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link> 
    <gazebo reference = "chassis">
        <material>Gazebo/Red</material>
    </gazebo>
    <joint name = "chassis_left_wheel" type = "continuous">
        <parent link = "chassis"/>
        <child link = "left_wheel"/>
        <origin xyz = "0 0.25 0"/>
        <axis xyz = "0 1 0"/>
    </joint>
    <!-- Left wheel -->
    <link name = "left_wheel">
        <visual>
            <origin xyz="0 0.052 0" rpy = "1.57 0 0"/>
            <geometry>
                <cylinder radius = "0.15" length = "0.1"/>
            </geometry> 
            <material name = "green">
                <color rgba = "0 1 0 1"/>
            </material>
        </visual>  
        <collision>
            <origin xyz="0 0.052 0" rpy = "1.57 0 0"/>
            <geometry>
                <cylinder radius = "0.15" length = "0.1"/>
            </geometry> 
        </collision>
        <xacro:inertial_cylinder mass="0.25" length = "0.1" radius = "0.15">
            <origin xyz="0 0.052 0" rpy="1.57 0 0"/>
        </xacro:inertial_cylinder>
    </link> 
    <gazebo reference = "left_wheel">
        <material>Gazebo/Green</material>
    </gazebo>
    <joint name = "chassis_right_wheel" type = "continuous">
        <parent link = "chassis"/>
        <child link = "right_wheel"/>
        <origin xyz = "0 -0.25 0"/>
        <axis xyz = "0 1 0"/>
    </joint>
     <!-- Right wheel -->
     <link name = "right_wheel">
        <visual>
            <origin xyz="0 -0.052 0" rpy = "1.57 0 0"/>
            <geometry>
                <cylinder radius = "0.15" length = "0.1"/>
            </geometry> 
            <material name = "green">
                <color rgba = "0 1 0 1"/>
            </material>
        </visual> 
        <collision>
            <origin xyz="0 -0.052 0" rpy = "1.57 0 0"/>
            <geometry>
                <cylinder radius = "0.15" length = "0.1"/>
            </geometry> 
        </collision>
        <xacro:inertial_cylinder mass="0.25" length = "0.1" radius = "0.15">
            <origin xyz="0 -0.052 0" rpy="1.57 0 0"/>
        </xacro:inertial_cylinder>  
    </link> 
    <gazebo reference = "right_wheel">
        <material>Gazebo/Green</material>
    </gazebo>
    <!-- Front caster wheel -->
    <joint name = "front_caster_wheel" type = "fixed">
        <parent link = "chassis"/>
        <child link = "front_caster_wheel"/>
        <origin xyz = "0.20 0 -0.125"/>
    </joint>
    <link name = "front_caster_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius = "0.025" />
            </geometry> 
            <material name = "blue">
                <color rgba = "0 0 1 1"/>
            </material>
        </visual>  
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius = "0.025" />
            </geometry> 
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link> 
    <gazebo reference = "front_caster_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value = "0.001"/>
        <mu2 value = "0.001"/>
    </gazebo>

    <!-- Rear caster wheel -->
    <joint name = "rear_caster_wheel" type = "fixed">
        <parent link = "chassis"/>
        <child link = "rear_caster_wheel"/>
        <origin xyz = "-0.20 0 -0.125"/>
    </joint>
    <link name = "rear_caster_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius = "0.025" />
            </geometry> 
            <material name = "blue">
                <color rgba = "0 0 1 1"/>
            </material>
        </visual> 
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius = "0.025" />
            </geometry>
        </collision> 
        <xacro:inertial_sphere mass="0.1" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link> 
    <gazebo reference = "rear_caster_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value = "0.001"/>
        <mu2 value = "0.001"/>
    </gazebo>
    <!-- Lidar link -->
     <joint name = "lidar_joint" type = "fixed">
        <parent link = "chassis"/>
        <child link = "lidar"/>
        <origin xyz = "0 0 0.160"/>
    </joint>
    <link name = "lidar">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size = "0.05 0.06 0.07" />
            </geometry> 
            <material name = "blue">
                <color rgba = "0 0 1 1"/>
            </material>
        </visual>  
    </link>
    <!-- Lidar simulation in gazebo -->
     <gazebo reference="lidar">
        <sensor type = "ray" name="laser">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.4</min>
                    <max>10</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="laser" filename="libgazebo_ros_laser.so">
                <topicName>scan</topicName>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frameName>lidar</frameName>
            </plugin>
        </sensor>

     </gazebo>
    <!-- Gazebo plugin for control -->
    <gazebo>
        <plugin name = "two_wheel_drive" filename = "libgazebo_ros_diff_drive.so" >
            <alwaysOn>true</alwaysOn>
            <leftJoint>chassis_left_wheel</leftJoint>
            <rightJoint>chassis_right_wheel</rightJoint>
            <commandTopic>cmd_vel</commandTopic>
            <wheelSeparation>0.5</wheelSeparation>
            <wheelDiameter>0.3</wheelDiameter>
            <wheelTorque>250</wheelTorque>
            <wheelAcceleration>15.0</wheelAcceleration>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_footprint</robotBaseFrame>
            <publishOdom>true</publishOdom>
            <publishOdomTF>true</publishOdomTF>
            <publishWheelTF>false</publishWheelTF>
            <updateRate>25</updateRate>
        </plugin>
    </gazebo>
</robot>
